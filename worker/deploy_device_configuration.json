{
    "name": "deploy_device_configuration",
    "description": "Deploy configuration to a device",
    "version": 1,
    "tasks": [
        {
            "name": "create_configuration_deployment",
            "type": "http",
            "retries": 3,
            "http": {
                "uri": "http://${env.DEPLOYMENTS_ADDR|mender-deployments:8080}/api/internal/v1/deployments/tenants/${workflow.input.tenant_id}/configuration/deployments/${workflow.input.deployment_id}/devices/${workflow.input.device_id}",
                "method": "POST",
                "contentType": "application/json",
                "json": {
                    "name": "configuration-${workflow.input.deployment_id}",
                    "configuration": "${workflow.input.configuration}",
                    "retries": "${workflow.input.retries}"
                },
                "headers": {
                    "X-MEN-RequestID": "${workflow.input.request_id}"
                },
                "connectionTimeOut": 8000,
                "readTimeOut": 8000
            }
        }
    ],
    "inputParameters": [
        "request_id",
        "tenant_id",
        "deployment_id",
        "device_id",
        "configuration",
        "retries"
    ]
}
